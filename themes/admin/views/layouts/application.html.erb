	  <% if current_user %>
          <li><%= "Logged-in as #{current_user.login.capitalize}" %></li>
          <li><%= link_to "My Account", edit_user_path(current_user) %></li>
          <li><%= link_to "Logout", logout_path %></li>
          <% else %>
	  <li><%= link_to "Login", login_path %></li>
	  <li><%= link_to "Sign Up", signup_path %></li>
          <%end %>
