

<% form_for @user_session, :url=>user_session_path do |f| %>
<div id="box">
      <div id="block-login" class="block">
        <h2>Login </h2>
        <div class="content login">
          <div class="flash">

            <div class="message notice">
	      <%= f.error_messages %>
            </div>

          </div>
          <form class="form login" action="#">
            <div class="group wat-cf">
              <div class="left">
                <label class="label right"> <%=I18n.t 'user.login' %></label>
              </div>
              <div class="right">
                <%= f.text_field :login, :class => "text_field" %>
              </div>
            </div>
            <div class="group wat-cf">
              <div class="left">
                <label class="label right"><%= f.label :password %></label>
              </div>
              <div class="right">
		 <%= f.password_field :password , :type => "password"%>              
              </div>
            </div>

	    <div class="group wat-cf">
              <div class="left">
                <label class="label right"></label>
              </div>
	      </div>
            <div class="group navform wat-cf">
              <div class="right">

		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
		<%= f.submit "Log In", :class => "submit" %>
		
		<p>
		  Forgot your password?
		  <%= link_to "Recover your password", new_password_reset_path %>
		</p>

                
              </div>
            </div>
          
        </div>
      </div>

      </div>
<% end %>






