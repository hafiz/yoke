<% form_for @user do |f| %>
<div id="box">

      <div id="block-login" class="block">
        <h4><%= I18n.t 'user.signup' %></h4>
 
        <div class="content login">
          <div class="flash">
            <div class="message notice">
	      <%= f.error_messages %>
            </div>

          </div>
          <form class="form login" action="#">
            <div class="group wat-cf">
              <div class="left">
                <label class="label right"> <%=I18n.t 'user.login' %></label>
              </div>
              <div class="right">
                <%= f.text_field :login, :class => "text_field" %>
              </div>
            </div>
            <div class="group wat-cf">
              <div class="left">
                <label class="label right"><%= f.label :email %></label>
              </div>
              <div class="right">
		 <%= f.text_field :email %>
		
              </div>
            </div>

	    <div class="group wat-cf">
              <div class="left">
                <label class="label right"></label>
              </div>
	      </div>
            <div class="group navform wat-cf">
              <div class="right">

	<%= submit_tag I18n.t "user.signup" , :class => "submit"  %>
                
              </div>
            </div>
          
        </div>
      </div>

      </div>
<% end %>






